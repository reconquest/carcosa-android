<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="10dp"
        android:paddingBottom="6dp"
        android:paddingRight="8dp"
        >

        <LinearLayout
                android:id="@+id/repo_list_item_name_panel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                >

            <ImageView
                    android:src="@drawable/ic_bank_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                />

            <TextView
                    android:id="@+id/repo_list_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:paddingLeft="6dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:orientation="horizontal"
                android:layout_below="@id/repo_list_item_name_panel"
                >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:textSize="12sp"
                    android:text="Last sync "
                />

            <TextView
                    android:id="@+id/repo_list_item_sync_stat_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:paddingRight="8dp"
                />

            <TextView
                    android:id="@+id/repo_list_item_sync_stat_added"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:visibility="gone"
                    style="@style/Green"
                />

            <TextView
                    android:id="@+id/repo_list_item_sync_stat_deleted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:visibility="gone"
                />

            <TextView
                    android:id="@+id/repo_list_item_sync_stat_uptodate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:textSize="12sp"
                    android:text="up-to-date"
                    style="@style/Gray"
                />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
                android:id="@+id/repo_list_item_unlock"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                style="@style/IconButton"
                app:icon="@drawable/ic_unlock_24dp"
            />

    </RelativeLayout>

    <ListView
            android:id="@+id/repo_token_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/search_query_panel"
            android:dividerHeight="0px"
            android:divider="@null"
        />

</LinearLayout>
